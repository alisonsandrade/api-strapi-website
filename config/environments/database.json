{
  "defaultConnection": "default",
  "connections": {
    "default": {
      "connector": "mongoose",
      "settings": {
        "client": "mongo",
        "host": "${process.env.DATABASE_HOST || '127.0.0.1}",
        "uri": "${process.env.NODE_ENV === 'production' ? process.env.DATABASE_URI_PROD : process.env.DATABASE_URI_DEV }"
      },
      "options": {
        "ssl": true
      }
    }
  }
}